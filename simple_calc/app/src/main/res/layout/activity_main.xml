<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#f473"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Choose a Basic Math Operation"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/addition_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9E80"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Addition"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHighlight="#FFC280"
            android:textColorLink="#FFC280"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/subtraction_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9E80"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Subtraction"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHighlight="#FFC280"
            android:textColorLink="#FFC280"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/multiplication_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9E80"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Multiplication"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHighlight="#FFC280"
            android:textColorLink="#FFC280"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/division_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9E80"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Division"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHighlight="#FFC280"
            android:textColorLink="#FFC280"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Results"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addition_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:layout_gravity="left"
                android:textSize="25sp"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtraction_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:layout_gravity="left"
                android:textSize="25sp"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/multiplication_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:layout_gravity="left"
                android:textSize="25sp"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/division_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:layout_gravity="left"
                android:textSize="25sp"
                android:fontFamily="casual"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>